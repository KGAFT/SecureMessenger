<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".Activities.MainActivity.Fragments.GenerateKeysFragment">
    <ImageView
        android:id="@+id/qrCodeImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"/>

    <ImageButton
        android:id="@+id/startCamera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/qrCodeImage"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="225dp"
        android:src="@drawable/camera_icon"/>
    <Button
        android:id="@+id/getBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/qrCodeImage"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="275dp"
        android:text="Get back"
        android:onClick="ocChangeToCamera"/>


</RelativeLayout>